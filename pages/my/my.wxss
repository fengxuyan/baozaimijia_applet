
page {
  background-color: #f5f5f5;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ff798a;
  padding-bottom: 30px;
    position: relative;
}
.earth{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: .1;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-top: 30px;
  border: 1px solid #eee;
}

.userinfo-nickname {
 font-size: 18px;
  color: white;
  font-weight: 600;
  margin-top: 10px;
}

.userinfo-list{
          width: 100%;
          height: auto;
          background-color: white;
          margin-top: 10px;
        }
        .input-row{
          padding: 0 15px;
          box-sizing: border-box;
          height: 50px;
          line-height: 50px;
          border-bottom: 1px solid #f5f5f5;
        }
        .txt{
          float: left;
          font-size: 14px;
        }
        .tags{
          float: right;
        }
