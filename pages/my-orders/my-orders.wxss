.amount-record{
  padding: 10px 0;
}
.box-list-item {
    display: -webkit-box;
    padding: 10px 0;
    border-bottom: 1px solid #f5f5f5;
}
.box-list-item .list-item-img {
    display: inline-block;
    text-align: center;
    overflow: hidden;
    width: 120px;
    height: 80px;
    margin-left: 10px;
}
.box-list-item  .list-item-img image {
    width: 100%;
    height: 100%;
    background-color: pink;
}
.box-list-item .list-item-txt {
    height: 40px;
    -webkit-box-flex: 1;
    position: relative;
    margin-left: 20px;

    text-align: left;
}
.user-name{
  font-size: 16px;
  color: #303030;
}
.name{
  float: left
}
.time{
  font-size: 12px;
  color: #9b9b9b;
  margin-top: 5px;
}

.user-amount{
   font-size: 14px;
    color: #9b9b9b;
    margin-top: 15px;
}
.amount{
  color: #ed6b69;
  font-weight: 600;
  margin-left: 10px;
  font-size: 16px;
}


.activity-notes-title{
  text-align: center;
}
.activity-notes-title .title{
  font-size: 16px;
  color: #303030;
  font-weight: 600;
  position: relative;
  display: inline-block;
}
.activity-notes-title .title::before{
  display: block;
    content: "";
    width: 10px;
    height: 1px;
    background-color: #303030;
    position: absolute;
    left: -20px;
    top: 50%;
}
.activity-notes-title .title::after{
  display: block;
    content: "";
    width: 10px;
    height: 1px;
    background-color: #303030;
    position: absolute;
    right: -20px;
    top: 50%;
}
.t-info{
  font-size: 12px;
  color: #9b9b9b;
  margin-top: 2px;
  margin-bottom: 10px;
}
